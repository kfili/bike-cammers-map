<h3 class="list-header" {{action 'toggleListDetail'}}>listr-list component: {{channel.title}}</h3>
<ol>
  {{#each channel.items as |item|}}
    {{listr-list/item item=item
                      toggleDone='toggleItemDone'
                      delete='deleteItem'}}
  {{/each}}
</ol>

<form {{action 'createItem' on='submit'}}>
  {{input placeholder='New Item'
          value=newItem.content}}
  <button class='btn btn-xs' type='submit'>create item</button>
</form>
